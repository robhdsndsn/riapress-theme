{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "ria/hero",
  "version": "0.1.0",
  "title": "RIA Hero Section",
  "category": "ria-blocks",
  "icon": "cover-image",
  "description": "Full-width hero section with background media, overlay, and flexible content area",
  "keywords": [
    "hero",
    "banner",
    "header",
    "organism",
    "section"
  ],
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "backgroundMediaId": {
      "type": "number",
      "default": 0
    },
    "backgroundImageUrl": {
      "type": "string",
      "default": ""
    },
    "backgroundVideoUrl": {
      "type": "string",
      "default": ""
    },
    "backgroundImageAlt": {
      "type": "string",
      "default": ""
    },
    "mediaType": {
      "type": "string",
      "default": "image"
    },
    "videoAutoplay": {
      "type": "boolean",
      "default": true
    },
    "overlayColor": {
      "type": "string",
      "default": "#000000"
    },
    "overlayOpacity": {
      "type": "number",
      "default": 40
    },
    "enableOverlay": {
      "type": "boolean",
      "default": true
    },
    "heightPreset": {
      "type": "string",
      "default": "75vh"
    },
    "customHeight": {
      "type": "number",
      "default": 600
    },
    "horizontalAlignment": {
      "type": "string",
      "default": "center"
    },
    "verticalAlignment": {
      "type": "string",
      "default": "center"
    },
    "textColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "contentWidth": {
      "type": "string",
      "default": "medium"
    },
    "backgroundPosition": {
      "type": "string",
      "default": "center center"
    },
    "backgroundSize": {
      "type": "string",
      "default": "cover"
    },
    "backgroundRepeat": {
      "type": "string",
      "default": "no-repeat"
    },
    "animationEnabled": {
      "type": "boolean",
      "default": true
    },
    "animationType": {
      "type": "string",
      "default": "fadeInUp"
    },
    "animationDuration": {
      "type": "number",
      "default": 0.6
    },
    "animationDelay": {
      "type": "number",
      "default": 0
    },
    "animationEasing": {
      "type": "string",
      "default": "ease-out"
    },
    "hoverAnimation": {
      "type": "string",
      "default": "none"
    }
  },
  "textdomain": "ria",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}
