{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "ria/quote",
	"version": "1.0.0",
	"title": "RIA Quote",
	"category": "ria",
	"icon": "format-quote",
	"description": "Display an impactful quote or testimonial with attribution, author photo, and styling options.",
	"keywords": [
		"quote",
		"testimonial",
		"blockquote",
		"citation",
		"pullquote",
		"impact"
	],
	"supports": {
		"html": false,
		"align": [
			"wide",
			"full"
		],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"attributes": {
		"quote": {
			"type": "string",
			"default": ""
		},
		"author": {
			"type": "string",
			"default": ""
		},
		"authorTitle": {
			"type": "string",
			"default": ""
		},
		"authorOrganization": {
			"type": "string",
			"default": ""
		},
		"authorImageId": {
			"type": "number",
			"default": 0
		},
		"authorImageUrl": {
			"type": "string",
			"default": ""
		},
		"style": {
			"type": "string",
			"default": "default",
			"enum": [
				"default",
				"large",
				"minimal",
				"boxed",
				"accent-bar"
			]
		},
		"variant": {
			"type": "string",
			"default": "default"
		},
		"customQuoteColor": {
			"type": "string",
			"default": ""
		},
		"customAuthorColor": {
			"type": "string",
			"default": ""
		},
		"customBackgroundColor": {
			"type": "string",
			"default": ""
		},
		"customAccentColor": {
			"type": "string",
			"default": ""
		},
		"customBorderColor": {
			"type": "string",
			"default": ""
		},
		"quoteSize": {
			"type": "string",
			"default": "medium",
			"enum": [
				"small",
				"medium",
				"large",
				"xlarge"
			]
		},
		"showQuoteMarks": {
			"type": "boolean",
			"default": true
		},
		"quoteMarkStyle": {
			"type": "string",
			"default": "default",
			"enum": [
				"default",
				"large",
				"icon",
				"none"
			]
		},
		"showAuthorImage": {
			"type": "boolean",
			"default": true
		},
		"authorImageShape": {
			"type": "string",
			"default": "circle",
			"enum": [
				"circle",
				"square",
				"rounded"
			]
		},
		"authorImageSize": {
			"type": "number",
			"default": 60
		},
		"attributionAlignment": {
			"type": "string",
			"default": "left",
			"enum": [
				"left",
				"center",
				"right"
			]
		},
		"textAlignment": {
			"type": "string",
			"default": "left",
			"enum": [
				"left",
				"center",
				"right"
			]
		},
		"showAccentBar": {
			"type": "boolean",
			"default": false
		},
		"accentBarPosition": {
			"type": "string",
			"default": "left",
			"enum": [
				"left",
				"right",
				"top",
				"bottom"
			]
		},
		"accentBarWidth": {
			"type": "number",
			"default": 4
		},
		"borderWidth": {
			"type": "number",
			"default": 0
		},
		"borderStyle": {
			"type": "string",
			"default": "solid",
			"enum": [
				"none",
				"solid",
				"dashed",
				"dotted",
				"double",
				"groove",
				"ridge"
			]
		},
		"borderRadius": {
			"type": "number",
			"default": 8
		},
		"boxShadow": {
			"type": "string",
			"default": "none",
			"enum": [
				"none",
				"small",
				"medium",
				"large",
				"xlarge",
				"2xlarge",
				"inner"
			]
		},
		"hoverShadow": {
			"type": "string",
			"default": "none",
			"enum": [
				"none",
				"small",
				"medium",
				"large",
				"xlarge",
				"2xlarge"
			]
		},
		"animationEnabled": {
			"type": "boolean",
			"default": true
		},
		"animationType": {
			"type": "string",
			"default": "fadeInUp",
			"enum": [
				"fadeIn",
				"fadeInUp",
				"fadeInDown",
				"fadeInLeft",
				"fadeInRight",
				"slideInUp",
				"slideInDown",
				"slideInLeft",
				"slideInRight",
				"zoomIn",
				"zoomInUp",
				"bounceIn",
				"rotateIn",
				"flipInX",
				"flipInY",
				"none"
			]
		},
		"animationDuration": {
			"type": "number",
			"default": 1000
		},
		"animationDelay": {
			"type": "number",
			"default": 0
		},
		"animationEasing": {
			"type": "string",
			"default": "ease-out",
			"enum": [
				"linear",
				"ease",
				"ease-in",
				"ease-out",
				"ease-in-out"
			]
		},
		"hoverAnimation": {
			"type": "string",
			"default": "none",
			"enum": [
				"none",
				"lift",
				"grow",
				"shrink",
				"rotate",
				"tilt",
				"glow",
				"pulse",
				"bounce"
			]
		},
		"customColor": {
			"type": "string",
			"default": ""
		}
	},
	"textdomain": "ria-quote",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
