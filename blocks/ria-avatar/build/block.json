{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "ria/avatar",
  "version": "0.1.0",
  "title": "RIA Avatar",
  "category": "ria",
  "icon": "admin-users",
  "description": "Circular avatar image with optional initials fallback.",
  "keywords": [
    "avatar",
    "profile",
    "user",
    "image",
    "atom"
  ],
  "supports": {
    "html": false,
    "align": true,
    "spacing": {
      "margin": true,
      "padding": false
    }
  },
  "attributes": {
    "variant": {
      "type": "string",
      "default": "neutral"
    },
    "customColor": {
      "type": "string",
      "default": ""
    },
    "customBackgroundColor": {
      "type": "string",
      "default": ""
    },
    "customBorderColor": {
      "type": "string",
      "default": ""
    },
    "imageId": {
      "type": "number",
      "default": 0
    },
    "imageUrl": {
      "type": "string",
      "default": ""
    },
    "imageAlt": {
      "type": "string",
      "default": ""
    },
    "initials": {
      "type": "string",
      "default": ""
    },
    "name": {
      "type": "string",
      "default": ""
    },
    "size": {
      "type": "string",
      "default": "medium",
      "enum": [
        "small",
        "medium",
        "large",
        "xlarge"
      ]
    },
    "shape": {
      "type": "string",
      "default": "circle",
      "enum": [
        "circle",
        "square",
        "rounded"
      ]
    },
    "borderWidth": {
      "type": "number",
      "default": 0
    },
    "showBorder": {
      "type": "boolean",
      "default": false
    },
    "animationType": {
      "type": "string",
      "default": "none"
    },
    "animationDuration": {
      "type": "number",
      "default": 0.6
    },
    "animationDelay": {
      "type": "number",
      "default": 0
    },
    "animationEasing": {
      "type": "string",
      "default": "ease-out"
    },
    "animateOnScroll": {
      "type": "boolean",
      "default": false
    },
    "staggerDelay": {
      "type": "number",
      "default": 0
    }
  },
  "textdomain": "riapress",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}