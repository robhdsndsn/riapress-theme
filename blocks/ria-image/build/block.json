{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "ria/image",
  "version": "0.1.0",
  "title": "RIA Image",
  "category": "media",
  "icon": "format-image",
  "description": "Display an image with advanced styling, hover effects, and overlays.",
  "keywords": [
    "image",
    "photo",
    "media",
    "picture",
    "gallery"
  ],
  "supports": {
    "html": false,
    "align": true,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "imageId": {
      "type": "number",
      "default": 0
    },
    "imageUrl": {
      "type": "string",
      "default": ""
    },
    "alt": {
      "type": "string",
      "default": ""
    },
    "caption": {
      "type": "string",
      "default": ""
    },
    "aspectRatio": {
      "type": "string",
      "default": "none"
    },
    "customAspectRatio": {
      "type": "string",
      "default": ""
    },
    "borderRadius": {
      "type": "number",
      "default": 0
    },
    "objectFit": {
      "type": "string",
      "default": "cover"
    },
    "hoverEffect": {
      "type": "string",
      "default": "none"
    },
    "overlayColor": {
      "type": "string",
      "default": ""
    },
    "overlayOpacity": {
      "type": "number",
      "default": 0
    },
    "showOverlayOnHover": {
      "type": "boolean",
      "default": false
    },
    "linkUrl": {
      "type": "string",
      "default": ""
    },
    "linkTarget": {
      "type": "string",
      "default": "_self"
    },
    "loading": {
      "type": "string",
      "default": "lazy"
    },
    "boxShadow": {
      "type": "string",
      "default": "none"
    },
    "borderWidth": {
      "type": "number",
      "default": 0
    },
    "borderColor": {
      "type": "string",
      "default": ""
    },
    "borderStyle": {
      "type": "string",
      "default": "solid"
    },
    "animationEnabled": {
      "type": "boolean",
      "default": true
    },
    "animationType": {
      "type": "string",
      "default": "fadeInUp"
    },
    "animationDuration": {
      "type": "number",
      "default": 0.6
    },
    "animationDelay": {
      "type": "number",
      "default": 0
    },
    "animationEasing": {
      "type": "string",
      "default": "ease-out"
    },
    "hoverAnimation": {
      "type": "string",
      "default": "none"
    }
  },
  "textdomain": "ria-image",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}
