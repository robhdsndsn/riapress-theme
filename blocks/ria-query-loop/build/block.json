{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "ria/query-loop",
  "title": "RIA Query Loop",
  "category": "ria-blocks",
  "icon": "grid-view",
  "description": "Display dynamic post content with custom queries and layouts",
  "keywords": [
    "query",
    "loop",
    "posts",
    "grid",
    "dynamic"
  ],
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "postType": {
      "type": "string",
      "default": "post"
    },
    "postsPerPage": {
      "type": "number",
      "default": 6
    },
    "orderBy": {
      "type": "string",
      "default": "date"
    },
    "order": {
      "type": "string",
      "default": "DESC"
    },
    "categories": {
      "type": "array",
      "default": []
    },
    "excludeCurrentPost": {
      "type": "boolean",
      "default": false
    },
    "columns": {
      "type": "number",
      "default": 3
    },
    "gap": {
      "type": "number",
      "default": 24
    },
    "showFeaturedImage": {
      "type": "boolean",
      "default": true
    },
    "showTitle": {
      "type": "boolean",
      "default": true
    },
    "showExcerpt": {
      "type": "boolean",
      "default": true
    },
    "showReadMore": {
      "type": "boolean",
      "default": true
    },
    "animationEnabled": {
      "type": "boolean",
      "default": true
    },
    "animationType": {
      "type": "string",
      "default": "fadeInUp"
    },
    "animationDuration": {
      "type": "number",
      "default": 0.6
    },
    "animationDelay": {
      "type": "number",
      "default": 0
    },
    "animationEasing": {
      "type": "string",
      "default": "ease-out"
    },
    "hoverAnimation": {
      "type": "string",
      "default": "none"
    }
  },
  "textdomain": "ria",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}
