{
	"name": "zp4-multisite-language-switcher",
	"version": "0.1.0",
	"description": "Language Switcher for the Multisite Language Switcher Plugin",
	"author": "Tomas Llobet-Arany",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build --webpack-copy-php",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start --webpack-copy-php",
		"make-pot": "wp i18n make-pot . languages/multisite-language-switcher.pot --slug=multisite-language-switcher --domain=multisite-language-switcher --exclude=node_modules,src",
		"make-json": "wp i18n make-json languages/ --no-purge"
	},
	"devDependencies": {
		"@wordpress/scripts": "^27.0.0"
	},
	"dependencies": {
		"@wordpress/components": "^28.1.0",
		"@wordpress/compose": "^7.1.0",
		"@wordpress/element": "^6.1.0"
	}
}
